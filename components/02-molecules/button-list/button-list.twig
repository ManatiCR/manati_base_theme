{#
/**
 * Available variables:
 *
 * - button_list__heading: the content of the title
 * - button_list__heading_element: the tag element for the title
 * - button_list__modifiers: array of modifiers to add to the base classname
 * - button_list__heading__modifiers:  array of modifiers to add to the heading classname
 * - button_list__container__modifiers:  array of modifiers to add to the container classname
 * - button__modifiers: array of modifiers to add to the button classname ("alt", "border-bottom")
 * - button_list__buttons: array of buttons with multiple properties
 *   - button_url: URL where the button points to.
 *   - button_content: the content of the button (typically text)
 */
#}

{% set button_list__base_class = button_list__base_class|default('button-list') %}

<div {{ bem( button_list__base_class, button_list__modifiers, button_list__blockname) }} {{ attributes }}>
	{# Title #}
	{{ title_prefix }}
	{% if button_list__heading %}
		<{{button_list__heading_element}} {{ bem('heading', button_list__heading__modifiers, button_list__base_class) }}>
			{{ button_list__heading }}
		</{{button_list__heading_element}}>
	{% endif %}
	{{ title_suffix }}

	<div {{ bem('container', button_list__container__modifiers, button_list__base_class) }}>
		{% for button in button_list__buttons %}
			{# Buttons #}
			{% include "@atoms/buttons/button.twig" with {
				button_modifiers: button__modifiers,
				button_content: button.content,
				button_url: button.url,
				button_icon: 'arrow',
				button_type: 'link'
        } %}
		{% endfor %}
	</div>
</div>
